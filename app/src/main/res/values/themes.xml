<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TLearn" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TLearn.Card.WordStatus" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="TLearn.Card.WordTranscription" parent="@style/TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="TLearn.Card.WordType" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TLearn.Study.ActionButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_card_action_ripple</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TLearn.Study.KnowButton" parent="TLearn.Study.ActionButton">
        <item name="backgroundTint">@color/pastel_green_background</item>
        <item name="android:textColor">@color/pastel_green_text</item>
    </style>

    <style name="TLearn.Study.DontKnowButton" parent="TLearn.Study.ActionButton">
        <item name="backgroundTint">@color/pastel_red_background</item>
        <item name="android:textColor">@color/pastel_red_text</item>
    </style>
</resources>