<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TLearn" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="actionBarStyle">@style/Theme.TLearn.ActionBar</item>
    </style>

    <style name="Theme.TLearn.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.TLearn.Card.WordStatus" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.TLearn.Card.Word" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Theme.TLearn.Card.WordTranslation" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.TLearn.Card.Divider">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="Theme.TLearn.Card.WordTranscription" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.TLearn.Card.WordType" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Theme.TLearn.Card.ShowTranslationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_show_translation_ripple</item>
        <item name="tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.TLearn.Study.ActionButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_card_action_ripple</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.TLearn.Study.KnowButton" parent="Theme.TLearn.Study.ActionButton">
        <item name="backgroundTint">@color/pastel_green_background</item>
        <item name="android:textColor">@color/pastel_green_text</item>
    </style>

    <style name="Theme.TLearn.Study.DontKnowButton" parent="Theme.TLearn.Study.ActionButton">
        <item name="backgroundTint">@color/pastel_red_background</item>
        <item name="android:textColor">@color/pastel_red_text</item>
    </style>

    <style name="Theme.TLearn.Card">
        <item name="cornerRadius">16dp</item>
        <item name="background_Color">@color/white</item>
        <item name="shadow0_Outer_Blur">8dp</item>
        <item name="shadow0_Outer_Alpha">0.08</item>
        <item name="shadow_Outer_Area">8dp</item>
    </style>

</resources>