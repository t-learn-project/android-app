<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TLearn" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/graphite</item>
        <item name="actionBarStyle">@style/Theme.TLearn.ActionBar</item>
    </style>

    <style name="Theme.TLearn.ActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/dark_graphite</item>
    </style>

    <style name="Theme.TLearn.Card">
        <item name="cornerRadius">16dp</item>
        <item name="background_Color">@color/dark_graphite</item>
        <item name="shadow0_Outer_Blur">8dp</item>
        <item name="shadow0_Outer_Alpha">0.20</item>
        <item name="shadow_Outer_Area">8dp</item>
    </style>

    <style name="Theme.TLearn.Card.Divider">
        <item name="android:background">@color/graphite</item>
    </style>

    <style name="Theme.TLearn.CardActionBar" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/dark_graphite</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>